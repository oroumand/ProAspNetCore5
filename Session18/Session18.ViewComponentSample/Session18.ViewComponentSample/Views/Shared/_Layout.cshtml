           @* <vc:person-counter-view></vc:person-counter-view>*@
            <vc:person-counter-view view-name="table"></vc:person-counter-view>
            @await Component.InvokeAsync("PersonCounterContent")

            @await Component.InvokeAsync("PersonCounterHtmlFragment")
        </div>
        <div class="col-8"> @RenderBody()</div>

    </div>
</body>
</html>
