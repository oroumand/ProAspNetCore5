<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-4">
            <div class="alert alert-danger">@await Component.InvokeAsync("Poco")</div>
            <div class="alert alert-info">@await Component.InvokeAsync("PersonCounter")</div>

            @await Component.InvokeAsync("PersonCounterView")
