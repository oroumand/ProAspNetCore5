@model List<IdentityRole>

<table class="table table-striped table-bordered table-secondary">
    <tr>
        <th>Id</th>
        <th>Actions</th>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4">There is no role</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="Roles">
                        <input type="hidden" value="@user.Id" name="id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" asp-controller="Roles" class="btn btn-success">Create User</a>