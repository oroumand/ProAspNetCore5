@model List<ApplicationUser>

<table class="table table-striped table-bordered table-secondary">
    <tr>
        <th>Id</th>
        <th>Email</th>
        <th>User Name</th>
        <th>Actions</th>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4">There is no user</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="Users">
                        <input type="hidden" value="@user.Id" name="id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                    <a asp-action="EditUserRoles" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-success">Edit User Role</a>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" asp-controller="Users" class="btn btn-success">Create User</a>
