@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<h1>@firstName</h1>
<table class="table table-striped table-bordered">
    <tr>
        <td>One Way Parent</td>
        <td><input type="text" value="@firstName" /></td>
    </tr>
    <tr>
        <td>Tow Way Default</td>
        <td><input type="text" @bind="firstName" /></td>
    </tr>
    <tr>
        <td>Tow Way On Input</td>
        <td><input type="text" @bind-value="firstName" @bind-value:event="oninput" /></td>
    </tr>
</table>

<input type="button" value="ChangeName" @onclick="ChangeName" />
<SurveyPrompt Title="How is Blazor working for you?" />

<OnewayTest Name="@firstName"></OnewayTest>
<TowWayTest @bind-Name="firstName"></TowWayTest>
@*<TowWayTest @bind-Name="firstName" @bind-Name:event="NameUpdate"></TowWayTest>*@
@code
{
    private string firstName = "Alireza";

    private void ChangeName()
    {
        firstName = $"Alireza {DateTime.Now}";
    }
}
